# AI-NIDS Environment Configuration
# Copy this file to .env and fill in your values

# ============== Flask Configuration ==============
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-key-change-in-production

# ============== Database ==============
# SQLite (Development)
DATABASE_URL=sqlite:///instance/ai_nids.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql://nids:password@localhost:5432/ai_nids

# ============== Redis (Optional) ==============
REDIS_URL=redis://localhost:6379/0

# ============== ML Configuration ==============
ML_MODEL_PATH=./models
DETECTION_THRESHOLD=0.7
SHAP_ENABLED=true

# ============== Log Collector ==============
SURICATA_LOG_PATH=/var/log/suricata/eve.json
ZEEK_LOG_DIR=/var/log/zeek/current
BATCH_SIZE=100
POLL_INTERVAL=1.0

# ============== Alert Settings ==============
ALERT_RATE_LIMIT=100
DATA_RETENTION_DAYS=30

# ============== Email Notifications (Optional) ==============
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# ============== Slack Integration (Optional) ==============
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx

# ============== Azure Configuration (Production) ==============
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_SQL_SERVER=your-server.database.windows.net
# AZURE_SQL_DATABASE=ai_nids
# AZURE_SQL_USERNAME=nidsadmin
# AZURE_SQL_PASSWORD=your-password
